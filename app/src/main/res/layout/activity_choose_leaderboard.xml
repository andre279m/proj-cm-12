<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseGame">

    <TextView
        android:id="@+id/TextChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/choose_highscores"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/simonBL"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_above="@id/puzzleBL"
        android:layout_below="@id/TextChoose"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/pallette_1_blue"
        android:text="@string/simon"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/puzzleBL"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/pallette_3_green"
        android:text="@string/puzzle"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <Button
        android:id="@+id/triviaBL"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_below="@id/puzzleBL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/pallette_4_orange"
        android:text="@string/trivia"
        android:textColor="@color/black"
        android:textSize="40sp" />

</RelativeLayout>